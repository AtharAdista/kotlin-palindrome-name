<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="24dp">

    <!-- Avatar Placeholder (Circle with Icon) -->
    <LinearLayout
        android:id="@+id/avatarPlaceholder"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/ic_photo"
        android:elevation="4dp">
    </LinearLayout>

    <!-- Name Input -->
    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/avatarPlaceholder"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Name"
        android:paddingHorizontal="16dp"
        android:textColorHint="#aaa"
        android:textColor="#000" />

    <!-- Palindrome Input -->
    <EditText
        android:id="@+id/etPalindrome"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/etName"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Palindrome"
        android:paddingHorizontal="16dp"
        android:textColorHint="#aaa"
        android:textColor="#000" />

    <!-- CHECK Button -->
    <Button
        android:id="@+id/btnCheck"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/etPalindrome"
        android:layout_marginTop="24dp"
        android:text="CHECK"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white" />

    <!-- NEXT Button -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/btnCheck"
        android:layout_marginTop="16dp"
        android:text="NEXT"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white" />

</RelativeLayout>
